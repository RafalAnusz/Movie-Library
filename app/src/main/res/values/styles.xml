<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StarButton">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@drawable/empty</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/colorGoldStar</item>
        <item name="backgroundTint">@color/colorTransparent</item>
        <item name="rippleColor">@color/colorTransparent</item>
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
